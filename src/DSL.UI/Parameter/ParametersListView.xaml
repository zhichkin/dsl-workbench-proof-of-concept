<UserControl x:Class="OneCSharp.DSL.UI.ParametersListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:OneCSharp.DSL.UI"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OneCSharp.DSL.UI;component/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ListView x:Name="MyListView" Background="Transparent" BorderThickness="0" Padding="0">

        <ListView.ItemContainerStyle>
            <Style TargetType="{x:Type ListViewItem}">
                <Setter Property="Focusable" Value="false"/> <!-- Removes selection of the item -->
                <EventSetter Event="MouseEnter" Handler="ListBoxItem_MouseEnter" />
                <EventSetter Event="MouseLeave" Handler="ListBoxItem_MouseLeave" />
            </Style>
        </ListView.ItemContainerStyle>

        <ListView.View>
            <GridView>

                <GridView.ColumnHeaderContainerStyle>
                    <Style TargetType="{x:Type GridViewColumnHeader}">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Style>
                </GridView.ColumnHeaderContainerStyle>

                <GridViewColumn Header="Name">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="-6,0,0,0">
                                <TextBlock Text="@" FontWeight="SemiBold" Margin="0,0,2,0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                         MinWidth="50" Margin="0" VerticalContentAlignment="Center"
                                         BorderThickness="1" BorderBrush="LightGray"
                                         TextChanged="Name_TextChanged"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>

                <GridViewColumn Header="Type">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TypeName}" Margin="-1,0,0,0" VerticalAlignment="Center"
                                       FontWeight="SemiBold" Foreground="#2B91AF"
                                       Cursor="Hand" MouseUp="TypeName_MouseUp"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>

                <GridViewColumn Header="INPUT">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="-6,0,0,0">
                                <TextBlock Text="INPUT" Margin="5,0,2,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="Blue"/>
                                <CheckBox IsChecked="{Binding IsInput}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>

                <GridViewColumn Header="OUTPUT">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="-6,0,0,0">
                                <TextBlock Text="OUTPUT" Margin="5,0,2,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="Blue"/>
                                <CheckBox IsChecked="{Binding IsOutput}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>

                <GridViewColumn Header="Commands" Width="100">
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="4,0,0,0"
                                        Visibility="{Binding IsRemoveButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Button Click="RemoveParameter_Click" Margin="0">
                                    <Image Source="{StaticResource Icon_Cancel}" Width="16" Height="16" VerticalAlignment="Center"/>
                                </Button>
                                <Button Click="MoveParameterUp_Click" Margin="1,0,0,0">
                                    <Image Source="{StaticResource Icon_MoveUp}" Width="16" Height="16" VerticalAlignment="Center"/>
                                </Button>
                                <Button Click="MoveParameterDown_Click" Margin="1,0,0,0">
                                    <Image Source="{StaticResource Icon_MoveDown}" Width="16" Height="16" VerticalAlignment="Center"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>

            </GridView>
        </ListView.View>
    </ListView>
</UserControl>