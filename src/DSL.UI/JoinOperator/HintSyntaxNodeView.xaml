<UserControl x:Class="OneCSharp.DSL.UI.HintSyntaxNodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:OneCSharp.DSL.UI"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Horizontal">
        <ui:TableObjectView DataContext="{Binding Expression}"/>
        <TextBlock Text="{Binding Keyword}" FontWeight="SemiBold" Foreground="Blue" Margin="3,0,3,0" Cursor="Hand">
            <behaviors:Interaction.Triggers>
                <behaviors:EventTrigger EventName="MouseLeftButtonUp">
                    <behaviors:CallMethodAction TargetObject="{Binding}" MethodName="SelectHintType"/>
                </behaviors:EventTrigger>
            </behaviors:Interaction.Triggers>
        </TextBlock>
        <TextBlock Text="("/>
        <TextBlock Text="{Binding HintType}"/>
        <TextBlock Text=")"/>
    </StackPanel>

</UserControl>
