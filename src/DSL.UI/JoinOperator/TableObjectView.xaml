<UserControl x:Class="OneCSharp.DSL.UI.TableObjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:OneCSharp.DSL.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <TextBlock Text="{Binding FullName}" Cursor="Hand"
               VerticalAlignment="Center" ContextMenuService.Placement="Bottom">
        <TextBlock.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Select table object..." Command="{Binding SelectTableObjectCommand}"/>
            </ContextMenu>
        </TextBlock.ContextMenu>
    </TextBlock>

</UserControl>
