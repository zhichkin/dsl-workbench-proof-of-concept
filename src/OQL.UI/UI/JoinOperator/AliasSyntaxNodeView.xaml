<UserControl x:Class="OneCSharp.OQL.UI.AliasSyntaxNodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:OneCSharp.OQL.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Horizontal">
        
        <TextBox Text="{Binding Alias, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 MinWidth="25" Height="18"
                 VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="LightGray"/>

        <!--<ui:TableObjectView DataContext="{Binding Expression}" VerticalAlignment="Center"/>-->
        <ui:HintSyntaxNodeView DataContext="{Binding Expression}" VerticalAlignment="Center" Margin="3,0,0,0"/>
        
    </StackPanel>
    
</UserControl>
