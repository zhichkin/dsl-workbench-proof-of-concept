<UserControl x:Class="OneCSharp.OQL.UI.Dialogs.TypeSelectionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:OneCSharp.OQL.UI.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <TreeView ItemsSource="{Binding Children}" Margin="10"
              SelectedItemChanged="TreeView_SelectedItemChanged"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TreeView.Resources>
            <HierarchicalDataTemplate DataType="{x:Type ui:TreeNodeViewModel}" ItemsSource="{Binding Children}">
                <TextBlock Text="{Binding Caption}" VerticalAlignment="Center"/>
            </HierarchicalDataTemplate>
        </TreeView.Resources>
    </TreeView>

</UserControl>
